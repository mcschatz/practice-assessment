<div class="container">
  <div class="row">
    <div class="col s8 center">
      <h3>Create a new account</h3>

      <%= form_for(@user) do |f| %>
        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password, help: "Must be 8 Characters" %>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>

        <%= f.submit "Create Account" %>
      <% end %>
    </div>
  </div>
</div>